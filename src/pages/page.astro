---
import Layout from "../layouts/Layout.astro";
import PageHeading from "../components/page-heading.astro";
import IconMdiCalendarMonthOutline from "~icons/mdi/calendar-month-outline";
import IconMdiCommentOutline from "~icons/mdi/comment-outline";
---

<Layout>
  <PageHeading>
    <th:block slot="title" th:text="${singlePage.title}"> </th:block>
    <div class="post-info mt-2">
      <div class="meta">
        <div class="info">
          <IconMdiCalendarMonthOutline class="w-3 h-3" />
          <span th:text="${singlePage.publishTime}"></span>
          <IconMdiCommentOutline class="w-3 h-3" />
          <a th:href="@{${singlePage.permalink}}">0</a>
        </div>
      </div>
    </div>
  </PageHeading>
  <div class="post-page">
    <div class="post animated fadeInDown">
      <div
        th:utext="${singlePageFinder.content(name).content}"
        id="post-content"
        class="post-content markdown-body"
      >
      </div>
    </div>
  </div>
</Layout>
