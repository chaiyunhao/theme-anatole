---
import Layout from "../layouts/Layout.astro";
import PostEntry from "../components/post-entry.astro";
---

<Layout>
  <th:block th:with="postItems=${posts.items}">
    <PostEntry />
    <div
      th:if="${posts.hasPrevious() || posts.hasNext()}"
      class="pagination flex justify-between items-center"
    >
      <a
        th:if="${posts.hasPrevious()}"
        class="btn w-20"
        role="navigation"
        th:href="${posts.prevUrl}"
        title="上一页">上一页</a
      >
      <span class="text-sm" th:text="${posts.page} +'/'+ ${posts.total}"></span>
      <a
        th:if="${posts.hasNext()}"
        class="btn w-20"
        role="navigation"
        th:href="${posts.nextUrl}"
        title="下一页">下一页</a
      >
    </div>
  </th:block>
</Layout>
